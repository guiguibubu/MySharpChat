<ContentView x:Class="MySharpChat.Client.GUI.MAUI.ConnectionUserControl"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MySharpChat.Client.GUI.MAUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <VerticalStackLayout Grid.Column="0" Grid.Row="0"
                    Grid.ColumnSpan="1" Grid.RowSpan="1"
                    Margin="10">
            <Label>Username</Label>
            <Entry x:Name="UserNameInputBox" Margin="10"/>
            <Label>IP Address</Label>
            <Entry x:Name="IpInputBox" Margin="10"/>
            <Label>Port</Label>
            <Entry x:Name="PortInputBox" Margin="10"/>
            <Button x:Name="ConnectButton" Margin="10" Padding="10,2" HorizontalOptions="Center" Text="Connect"/>
            <Label x:Name="ConnectionStatus" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="0,20"/>
        </VerticalStackLayout>
    </Grid>
</ContentView>
