<UserControl x:Class="MySharpChat.Client.GUI.ConnectionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MySharpChat.Client.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Grid.Column="0" Grid.Row="0"
                    Grid.ColumnSpan="1" Grid.RowSpan="1"
                    Background="WhiteSmoke">
            <Label>Username</Label>
            <TextBox x:Name="UserNameInputBox"/>
            <Label>IP Address</Label>
            <TextBox x:Name="IpInputBox"/>
            <Label>Port</Label>
            <TextBox x:Name="PortInputBox"/>
            <Button x:Name="ConnectButton">Connect</Button>
        </StackPanel>
    </Grid>
</UserControl>
