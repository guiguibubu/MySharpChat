<Window x:Class="MySharpChat.Client.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MySharpChat.Client.GUI"
        mc:Ignorable="d"
        Title="MyShartChat" 
        MinHeight="200" 
        MinWidth="400"
        Height="450" 
        Width="800" 
        Background="#36393F"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        ResizeMode="CanResizeWithGrip">
    <Window.Resources>
    </Window.Resources>

    <Grid>
        <local:ChatUserControl x:Name="chatUC" IsEnabled="False" Visibility="Hidden"/>
        <local:ConnectionUserControl x:Name="connectionUC" IsEnabled="True" Visibility="Visible"/>
    </Grid>
</Window>
